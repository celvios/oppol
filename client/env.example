# OPoll - Client Environment Variables
# Copy this to .env.local and fill in values

# Network Configuration
NEXT_PUBLIC_NETWORK=bscTestnet
NEXT_PUBLIC_CHAIN_ID=97
NEXT_PUBLIC_NETWORK_NAME=BNB Smart Chain Testnet
NEXT_PUBLIC_RPC_URL=https://bsc-testnet-rpc.publicnode.com
NEXT_PUBLIC_EXPLORER_URL=https://testnet.bscscan.com

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:3001

# Contract Addresses
NEXT_PUBLIC_MARKET_ADDRESS=your_market_contract_address
NEXT_PUBLIC_USDC_CONTRACT=your_usdc_contract_address
NEXT_PUBLIC_ZAP_ADDRESS=your_zap_contract_address
NEXT_PUBLIC_ORACLE_ADDRESS=your_oracle_contract_address

# WalletConnect (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Platform Token (for admin access)
NEXT_PUBLIC_PLATFORM_TOKEN_ADDRESS=your_platform_token_address