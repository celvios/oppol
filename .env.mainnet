# OPOLL - Mainnet Production Environment
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database (Use production PostgreSQL)
DATABASE_URL=your_production_database_url

# BSC Mainnet Configuration
BNB_RPC_URL=https://bsc-dataseed.binance.org
BNB_WSS_URL=wss://bsc-ws-node.nariox.org:443
CHAIN_ID=56

# Mainnet Contract Addresses (Deploy first)
MARKET_CONTRACT=your_deployed_market_contract
USDC_CONTRACT=0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d
MULTI_MARKET_ADDRESS=your_deployed_market_contract

# Security (Generate new secure values for production)
PRIVATE_KEY=your_mainnet_private_key
ENCRYPTION_KEY=your_production_encryption_key
JWT_SECRET=your_production_jwt_secret
ADMIN_SECRET=your_production_admin_secret

# Production CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://yourapp.vercel.app